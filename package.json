{
    "name": "auto-commit-desktop",
    "private": true,
    "version": "1.1.0",
    "description": "A desktop app for generating git commits safely",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "vite build && electron-builder"
    },
    "keywords": [
        "git",
        "automation",
        "electron",
        "desktop"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "date-fns": "^3.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "simple-git": "^3.25.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "cross-env": "^10.1.0",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.28.1",
        "wait-on": "^7.2.0"
    }
}